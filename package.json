{
  "name": "MacPower",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/main.ts",
    "build": "bun run compile && bun run dmg",
    "compile": "bun run compile:apple && bun run compile:x64",
    "compile:apple": "bun build ./src/main.ts --compile --target=bun-darwin-arm64 --outfile ./builds/app/apple/MacPower --sourcemap --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "compile:x64": "bun build ./src/main.ts --compile --target=bun-darwin-x64 --outfile ./builds/app/intel/MacPower --sourcemap --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "dmg": "bun run dmg:apple && bun run dmg:x64",
    "dmg:apple": "rm -f ./builds/dmg/apple/MacPower.dmg && create-dmg --app-drop-link 0 0 ./builds/dmg/apple/MacPower.dmg ./builds/app/apple",
    "dmg:x64": "rm -f ./builds/dmg/intel/MacPower.dmg && create-dmg --app-drop-link 0 0 ./builds/dmg/intel/MacPower.dmg ./builds/app/intel",
    "start": "NODE_ENV=production bun src/main.ts"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "antd": "^5.27.6",
    "plist": "^3.1.0",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/plist": "^3.0.5",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  }
}